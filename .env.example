# ============================================================
# THRIVE DASHBOARD — Environment Variables
# Copy this to .env and fill in your real values
# NEVER commit .env to git
# ============================================================

# Flowhub Maui API credentials
# Get these from your Flowhub account or from the TAPS .env
FLOWHUB_API_KEY=your_flowhub_api_key_here
FLOWHUB_CLIENT_ID=your_client_id_here

# Base URL for Flowhub Maui API
# Check your TAPS config — likely one of these:
FLOWHUB_BASE_URL=https://app.flowhub.co

# Store Location IDs — map each Thrive location
# Find these in Flowhub Maui under each store's settings
LOCATION_CACTUS=your_cactus_location_id
LOCATION_CHEYENNE=your_cheyenne_location_id
LOCATION_JACKPOT=your_jackpot_location_id
LOCATION_MAIN=your_main_location_id
LOCATION_RENO=your_reno_location_id
LOCATION_SAHARA=your_sahara_location_id
LOCATION_SAMMY=your_sammy_location_id

# Dashboard auth (simple password gate for the dashboard)
DASHBOARD_PASSWORD=thrive2025

# Server config
PORT=3000
NODE_ENV=production

# Cache TTL in seconds (5 min default — balances freshness vs API rate limits)
CACHE_TTL=300
